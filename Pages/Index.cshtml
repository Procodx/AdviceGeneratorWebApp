@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card-body bg-success p-4 rounded-3 shadow-lg d-flex flex-column col-lg-4 mx-md-5 align-items-center my-5 mx-lg-auto mx-3">
   <div>
       @if (Model.deserialAdvice != null)
       {
            <h4 class="text-light fw-bold text-center ">"@Model.deserialAdvice.slip.advice"</h4>
       }
        else
        {
            <h4 class="text-center text-danger"> Sorry your internet connection is not strong enough to get an advice.</h4>
        }
    </div>
   <div class="d-flex my-2"><hr /><img src="./images/pattern-divider-desktop.svg" class="img-fluid" /><hr /></div>
    
    <a class="btn btn-primary btn-sm dice-btn rounded-pill p-2 text-center" asp-page-handler="Refresh"><img src="./images/icon-dice.svg" class="img-fluid" /></a> 
</div>





